<configuration>
    <property name="LOG_DIR" value="logs" />

    <timestamp key="CURRENT_DATE" datePattern="yyyy-MM-dd_HH-mm-ss"/>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- Her çalıştırmada yeni dosya oluştur -->
        <file>${LOG_DIR}/${CURRENT_DATE}.log</file>
        <append>false</append> <!-- eski logun üzerine yazma, yeni dosya aç -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
